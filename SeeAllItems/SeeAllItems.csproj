<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>SeeAllItems</AssemblyName>
    <RootNamespace>SeeAllItems</RootNamespace>
    <AssemblyVersion>0.0.0.1</AssemblyVersion>
    <ModsOutputDir>$(AppData)\.BetaSharp\mods\</ModsOutputDir>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\BetaSharp\BetaSharp.csproj" />
  </ItemGroup>

  <ItemGroup>
    <!-- Use compiled BetaSharp.Client DLL if available to avoid circular project refs -->
    <Reference Include="BetaSharp.Client" Condition="Exists('..\BetaSharp.Client\bin\$(Configuration)\net10.0\BetaSharp.Client.dll')">
      <HintPath>..\BetaSharp.Client\bin\$(Configuration)\net10.0\BetaSharp.Client.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <!-- Embed only if the file exists in the mod folder to avoid build errors when it's not present locally -->
    <EmbeddedResource Include="seeallitems_buttons.png" Condition="Exists('seeallitems_buttons.png')" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Costura.Fody" Version="6.0.0" PrivateAssets="all" />
    <PackageReference Include="MonoMod" Version="22.7.31.1" PrivateAssets="none">
      <PrivateAssets>none</PrivateAssets>
    </PackageReference>
    <PackageReference Include="MonoMod.RuntimeDetour" Version="25.3.3" PrivateAssets="none">
      <PrivateAssets>none</PrivateAssets>
    </PackageReference>
    <PackageReference Include="SixLabors.ImageSharp.Drawing" Version="2.1.7" />
  </ItemGroup>

  <Target Name="CopyModDllToModsFolder" AfterTargets="Build" Condition="'$(DesignTimeBuild)' != 'true'">
    <MakeDir Directories="$(ModsOutputDir)" />
    <Copy SourceFiles="$(TargetPath)" DestinationFolder="$(ModsOutputDir)" SkipUnchangedFiles="true" />
  </Target>

</Project>
